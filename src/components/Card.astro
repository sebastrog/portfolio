---
import { isProd } from '../utils/envs';
interface Props {
	title: string;
	body: string;
	href: string;
	cover: string;
	tags: string;
}

const { href, title, body, cover, tags } = Astro.props;

const COVER = "[&_img]:rounded-lg [&_img]:w-full [&_img]:h-full [&_img]:object-cover [&_img]:duration-300 [&_img]:opacity-80 [&_img]:group-hover:opacity-100";
---

<li class="w-full group">
	<div class="md:flex items-center justify-between bg-black/35 rounded-lg relative z-30">
		<a 
			href={href} 
			target="_blank"
			class="block py-4 px-6"
		>
			<h3 
				class="font-light md:text-xl duration-300 hover:text-[#4e846e] text-center md:text-left"
			>
					{title}
					<span class="inline-block opacity-0 translate-x-0 group-hover:translate-x-1 group-hover:opacity-100 duration-300">&#187;</span>
			</h3>
		</a>
	
		<div class="rounded-lg md:w-[270px] h-[70px] p-2">
			<a 
				href={href} 
				target="_blank"
				class={`block w-full h-full ${COVER}`}
			>
				<img
					src={isProd && isProd ? `/portfolio/${cover}` : cover}
					alt={title}
					width="270"
					height="70"
				/>
			</a>
		</div>
	</div>

	<div class="md:flex items-center text-center md:text-left md:justify-between bg-black/20 rounded-b-lg relative z-20 -mt-1">
		<div class="py-4 px-6">
			<p class="text-sm">{body}</p>
		</div>

		<div class="md:w-[270px] flex-none px-2 md:py-2 pb-4">
			<div class="md:flex items-center gap-1 text-center md:text-left">
				<p class="text-sm">{tags}</p>
			</div>
		</div>
	</div>
</li>