---
import Window from "./Window.astro";

const skillCategories = [
  {
    name: "frontend",
    color: "syntax-cyan",
    skills: ["React JS", "TypeScript", "Tailwind CSS", "Material UI", "SASS"],
  },
  {
    name: "backend",
    color: "syntax-yellow",
    skills: ["Laravel", "Livewire", "Filament"],
  },
  {
    name: "testing",
    color: "syntax-green",
    skills: ["Pest (Laravel, Livewire, Filament)"],
  },
  {
    name: "other",
    color: "syntax-orange",
    skills: ["Git", "Agile teamwork"],
  },
  {
    name: "exploring",
    color: "syntax-pink",
    skills: ["React Native", "Jest (Testing)"],
  },
];
---

<Window id="skills" title="skills.ts">
  <div class="font-mono text-sm">
    <div class="space-y-4">
      <p class="text-gray-400 dark:text-gray-500">
        <span class="line-number">1</span>
        <span class="syntax-pink">interface</span>{" "}
        <span class="syntax-yellow">Skills</span>{" "}
        <span class="text-gray-400 dark:text-gray-500">{"{"}</span>
      </p>

      {
        skillCategories.map((category, catIndex) => (
          <div class="pl-4">
            <p class="text-gray-400 dark:text-gray-500">
              <span class="line-number">{catIndex + 2}</span>
              <span class={category.color}>{category.name}</span>
              <span class="text-gray-400 dark:text-gray-500">:</span>{" "}
              <span class="syntax-yellow">[</span>
            </p>
            <div class="pl-6 flex flex-wrap gap-2 py-2">
              {category.skills.map((skill, skillIndex) => (
                <span class="skill-tag">
                  "{skill}"
                  {skillIndex < category.skills.length - 1 && (
                    <span class="text-gray-400 dark:text-gray-500">,</span>
                  )}
                </span>
              ))}
            </div>
            <p class="text-gray-400 dark:text-gray-500">
              <span class="syntax-yellow">]</span>
              {catIndex < skillCategories.length - 1 && (
                <span class="text-gray-400 dark:text-gray-500">,</span>
              )}
            </p>
          </div>
        ))
      }

      <p class="text-gray-400 dark:text-gray-500">
        <span class="line-number">7</span>
        <span class="text-gray-400 dark:text-gray-500">{"}"}</span>
      </p>
    </div>
  </div>
</Window>
